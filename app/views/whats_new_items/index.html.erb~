    <script>
      var fixHelper = function(e, ui) {
        ui.children().each(function() {
        $(this).width($(this).width());
        });
        return ui;
      };
  
      $(".connectedSortable").sortable({
        items: "tbody > tr",
        helper: "fixHelper",
        axis: "y",
        connectWith: ".connectedSortable",
        dropOnEmpty: true,
        receive: function(e, ui){
          $(this).find("tbody").append(ui.item);   
        }
      });
      
    </script>
