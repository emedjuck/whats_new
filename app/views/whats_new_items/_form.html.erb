 <%= form_for @item, class: "form-horizontal center" do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title:" %>
        <%= f.text_field :title,  class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Description:" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :experiment, "Experiment:" %>
        <%= f.text_field :experiment, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :link, "Link:" %>
        <%= f.text_field :link, class: "form-control" %>
      </div>
      <div class="col-sm-2 form-group">
	<%= f.label :start_date, "Start Date:" %>
	<%= f.text_field :start_date, class: "form-control datepicker"  %>
      </div>
      <div class="col-sm-2 form-group">
	<%= f.label :end_date, "End Date:" %>
	<%= f.text_field :end_date, class: "form-control datepicker" %>
      </div>
      <div id ="form_buttons" style="float:right; margin-top:10px">
	<%= f.submit "Save", class: "btn btn-default btn-primary", id: "save"%>  
	<%= link_to "Cancel",  whats_new_items_path, class: "btn btn-default btn-danger", id: "cancel"%>
      </div>
 <% end %>




<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  })
</script>

